{{#if user.coverPhoto}}
  <div style="background-image: url({{user.coverPhoto}})" class="coverPhoto"> </div>
  {{else}}
  <div>
    <form action="" method="post">
      <input type="submit" value="Add a Cover Photo">
    </form>
  </div>
{{/if}}

<div class="container">
  <div class="row">
    <div class="col-xs-4 col-offset-2">



      <h4>Name:</h4>
      <p>{{user.displayName}} <img class="profilePic" src="{{user.imgUrl}}"> </p>

      <h4>Biography:</h4>
      {{#if user.bio}}
        <p>{{user.bio}}</p>
        {{else}}
        <div>
          <form action="/bio/" method="post">
            <input type="submit" value="Add a Biography">
          </form>
        </div>
      {{/if}}

      <div>
        {{#if isFollowing}}
          <form action="/unfollow/{{user._id}}" method="post">
            <input type="submit" value="Unfollow">
          </form>

          {{else}}
          <form action="/follow/{{user._id}}" method="post">
            <input type="submit" value="Follow">
          </form>
        {{/if}}
      </div>

      <h4>Tweets:</h4>
      <p>{{user.tweets}}</p>

      <h4>Following:</h4>
      {{#each followees}}
        <div>{{this.followee.displayName}}
      </div>
      {{/each}}

      <h4>Followers:</h4>
      {{#each followers}}
        <p>{{this.follower.displayName}}</p>
      {{/each}}

      <a href="/users/"> Return to see all users </a>
    </div> <!-- end column 1 -->
    <div class="col-xs-4">
      <h4> {{user.displayName}}'s Tweets</h4>
      {{#each soloTweet}}
        <div class="tweet">
          <img class="profilePic" src="{{this.user.imgUrl}}" alt="">
          <a href="/users/{{this.user._id}}">{{this.user.displayName}} </a>
          <div class="text-center"> {{this.content}} </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
