{{#if error}}
<div class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  {{error}}
</div>
{{/if}}
<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Add a Review for {{restaurant.name}}</h3>
  <div class="form-group">
    <label></label>
    <textarea name="content" class="form-control" lines=4></textarea>
  </div>
  <div class="form-group">
    <label>Rating</label>
    <input type="text" name="stars" placeholder="Rating (1-5)" class="form-control">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Submit Review</button>
  </div>
</form>
