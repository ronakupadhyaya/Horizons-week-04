<h1> Add a Review for {{name}} </h1>

<form method="POST">
  <div class="form-group">
    <label>Review</label>
    <textarea name="content" placeholder="Review"></textarea>
  </div>
  <div class="form-group">
    <label>Stars</label>
    <input type="number" name="stars" class="form-control" min="0" max="5">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Submit Review</button>
  </div>
</form>