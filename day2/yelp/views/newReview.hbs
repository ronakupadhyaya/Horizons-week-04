<head>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
</head>

<h1> Leave a Review </h1>
<div class="container">
  <div id="reviewbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Leave a Review!</div>
      </div>
      <div class="panel-body" >
        <form  class="form-horizontal" method="POST" action="/restaurants/{{id}}/review">
          <div id="div_id_review" class="form-group required">
            <label for="id_review" class="control-label col-md-2  requiredField"> Review<span class="asteriskField">*</span> </label>
            <div class="controls col-md-8 ">
              <input class="input-md textinput textInput form-control" id="id_review" name="review" placeholder="A Short Review" style="margin-bottom: 10px" type="text" />
            </div>
          </div>
          <div id="div_id_rating" class="form-group required">
            <!-- <label for="id_rating" class="control-label col-md-2  requiredField"> Stars(1-5)<span class="asteriskField">*</span> </label> -->
            <div class="controls col-md-8 col-md-offset-1 ">
                <input class="star star-5" id="star-5" type="radio" name="star" value="5"/>
                <label class="star star-5" for="star-5"></label>
                <input class="star star-4" id="star-4" type="radio" name="star" value="4"/>
                <label class="star star-4" for="star-4"></label>
                <input class="star star-3" id="star-3" type="radio" name="star" value="3"/>
                <label class="star star-3" for="star-3"></label>
                <input class="star star-2" id="star-2" type="radio" name="star" value="2"/>
                <label class="star star-2" for="star-2"></label>
                <input class="star star-1" id="star-1" type="radio" name="star" value="1"/>
                <label class="star star-1" for="star-1"></label>
              </div>
          </div>
          <div class="form-group">
            <!-- <div class="aab controls col-md-3 "></div> -->
            <div class="controls col-md-8 col-md-offset-2">
              <input type="submit" name="Signup" value="Submit Review" class="btn btn-primary btn btn-info btn-lg btn-block" id="submit-id-signup" />
            <!-- </div> -->
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
