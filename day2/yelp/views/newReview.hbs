<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px" 
action="/restaurant/{{restaurantId}}/review">
  <h3>Add a review for {{restaurant.name}}</h3>
  <div class="form-group">
    <label>Review</label>
    <input type="text" name="review" class="form-control">
  </div>
  <div class="form-group">
    <label>Stars(1-5)</label>
    <input type="text" name="stars" class="form-control">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Submit Review</button>
  </div>
</form>
