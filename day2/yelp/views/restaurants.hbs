<div class="rest-list-container">
  <h1>Restaurants Near You</h1>
  {{#each restaurants}}
  <div class="rest-item">
    <div class="rest-item-header">
      <h4><a href='/restaurants/{{_id}}' style="color:black;">{{name}}</a></h4>
      <div class="text-cont">

        <div class="top">

            {{#if averageRating}}
            <div class="star-ratings-css-main" >
              <div class="star-ratings-css-top" style="width:{{mainStar}}%"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
              <div class="star-ratings-css-bottom"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span><span style="color:black; padding-left:5px;text-shadow:none;">{{averageRating}}%</span><span style="color:black; padding-left:5px;text-shadow:none;">({{reviewCount}} Reviews)</span><span class="addr">{{address}}</span></div>

            </div>
            {{else}}
            <div class="star-ratings-css-main" >
              <div class="star-ratings-css-top" style="width:0%"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
              <div class="star-ratings-css-bottom"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span><span style="color:black; padding-left:5px;text-shadow:none;font-style:italic;">No Reviews Yet!</span><span class="addr">{{address}}</span></div>

            </div>
            {{/if}}
          <div class="dc-cont">
            <span class="bullet-after">
              <span class="idv-dollars">
                {{dollarSigns}}
              </span>
            </span>
            <span class="cat">
              {{category}}
            </span>
          </div>
        </div>


      </div>
    </div>
    <div class="rest-item-body">
    </div>
  </div>
  {{/each}}
</div>

