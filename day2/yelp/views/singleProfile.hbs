<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Location:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div><strong>{{this.to.displayName}}</strong>
      <p>{{this.to.location}}</p>
  <form  action="/unfollow/{{this.to._id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
</div>

{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{this.from.displayName}}</p>
  <p>{{this.from.location}}</p>
{{/each}}
