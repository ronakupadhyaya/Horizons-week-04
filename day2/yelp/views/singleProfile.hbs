<h4>Name:</h4>
<p>{{user.name}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4> <br>
{{#each followings}}
  <div>{{followings}} <br>
  <form  action="/unfollow/{{uid2.id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
</div>
{{/each}} <br>

<h4>Followers:</h4> <br>
{{#each followers}}
  <p>{{this.from}}</p> <br>
{{/each}} <br>

<h4>Reviews({{reviews.length}})</h4><br>
{{#each reviews}}
<b>{{restaurantid.name}}</b><br>
Stars:{{stars}}<br>
{{content}}<br>
{{/each}}
