
<h4>Name:</h4>
<p>{{user.displayName}}</p>
<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div>
<p>{{to.displayName}}</p>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{from.displayName}}</p>
{{/each}}
<form class="form" action="/users/{{user._id}}" method="post">
  {{#if isFollowing}}
<input type="submit" name="follow-button" value="Unfollow!">
{{else}}
<input type="submit" name="follow-button" value="Follow!">
{{/if}}
</form>
