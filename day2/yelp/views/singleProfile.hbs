{{#if follow}}
<form action="/profile/{{user._id}}/unfollow" method="POST" id="unfollow">
  <button type="submit" form="unfollow" value="Submit">
    <div style="font-weight:bold;">Unfollow</div>
  </button>
</form>
{{else if self}}
{{else}}
<form action="/profile/{{user._id}}/follow" method="POST" id="follow">
  <button type="submit" form="follow" value="Submit">
    <div style="font-weight:bold;">Follow</div>
  </button>
</form>
{{/if}}

<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.username}}</p>

<h4>Address:</h4>
<p>{{user.address}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div>{{userTo.displayName}}
  <form  action="/profile/{{userTo.id}}/unfollow" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{userFrom.displayName}}</p>
{{/each}}
<form action="/profile" method="GET" id="backForm">
  <button type="submit" form="backForm" value="Submit">
    Back To All Profiles
  </button>
</form>
