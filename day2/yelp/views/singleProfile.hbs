<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

{{#if following}}
<form method="POST" action="/unfollow/{{user._id}}">
	<input type="submit" value="Unfollow">
</form>
{{else}}
<form method="POST" action="/follow/{{user._id}}">
	<input type="submit" value="Follow">
</form>
{{/if}}

<h4>Following:</h4>
{{#each following}}
  <div>{{displayName}}
  <form  action="/unfollow/{{uid2.id}}" method="post">
    <input style="display: inline;" type="submit" value="">
  </form>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{uid1.displayName}}</p>
{{/each}}

