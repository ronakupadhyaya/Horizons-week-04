<a href="/users">Go Back</a>

<div class="col-xs-12" style="font-size: 18px">
  <p class="col-xs-offset-3"><strong>Name: </strong>{{user.displayName}}</p>
</div>

<div class="col-xs-12" style="font-size: 18px">
  <p class="col-xs-offset-3"><strong>Email: </strong>{{user.email}}</p>
</div>

<div class="col-xs-12" style="font-size: 18px">
  <p class="col-xs-offset-3"><strong>Address: </strong>{{user.location}}</p>
</div>

<div class="col-xs-12" style="font-size: 18px">
  <p class="col-xs-offset-3"><strong>I am following this one: </strong>{{followBool}}</p>
</div>

<div class="col-xs-12" style="margin-top: 1em">
  <h4 style="text-align: center">Following ({{followings.length}})</h4>
  <div class="col-xs-8 col-xs-offset-2">
    {{#each followings}}
      <div class="col-xs-6" style="border: 2px dashed grey; padding: 1em">
        <p style="text-align: center">{{this.to.displayName}}</p>
        <form  action="/unfollow/{{this.to._id}}" method="post">
          <input class="btn btn-success col-xs-6 col-xs-offset-3" style="display: inline" type="submit" value="Unfollow">
        </form>
      </div>
    {{/each}}
  </div>
</div>

<div class="col-xs-12" style="margin-top: 1em">
  <h4 style="text-align: center">Followers ({{followers.length}})</h4>
  <div class="col-xs-8 col-xs-offset-2">
    {{#each followers}}
      <div class="col-xs-3" style="border: 2px dashed grey; padding: 1em">
        <p style="text-align: center">{{this.from.displayName}}</p>
      </div>
    {{/each}}
  </div>
</div>

<div class="col-xs-12" style="margin-top: 1em">
  <h4 style="text-align: center">Reviews ({{allReviews.length}})</h4>
  {{#each allReviews}}
    <div style="border-top: 2px solid grey; padding: 1em">
      <br>
      <p><strong>{{this.restaurantId.name}}</strong></p>
      <p>{{this.stars}} stars</p>
      <p>{{this.content}}</p>
    </div>
  {{/each}}
</div>
