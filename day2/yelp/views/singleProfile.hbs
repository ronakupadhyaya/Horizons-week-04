<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div> {{this.to.displayName}}
    <form  action="/unfollow/{{this.from._id}}" method="post">
      <input style="display: inline;" type="submit" value="Unfollow">
    </form>
  </div>
{{/each}}


<h4>Followers:</h4>
{{#each followers}}
  <p>{{this.from.displayName}}</p>
{{/each}}

{{#unless alreadyFollowed}}
  <form  action="/follow/{{user._id}}" method="post">
    <input style="display: inline;" type="submit" value="Follow">
  </form>
{{else}}
  <form  action="/unfollow/{{user._id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
{{/unless}}
