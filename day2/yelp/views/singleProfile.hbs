<h4>Name:</h4>
<p>{{user.displayName}}
  <a href="/follow/{{user._id}}">
    <form  action="/follow/{{user._id}}" method="post">
      <input style="display: inline;" type="submit" value="follow">
  </a>
  <a href="/unfollow{{user._id}}">
    <form  action="/unfollow/{{user._id}}" method="post">
      <input style="display: inline;" type="submit" value="unfollow">
  </a>
</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>


<h4>Following:</h4>
{{#each allFollowing}}
  <div>{{to.displayName}}
  <!-- <form  action="/unfollow/{{to.id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form> -->
</div>
{{/each}}

<h4>Followers:</h4>
{{#each allFollowers}}
    <div> {{from.displayName}} </div>
{{/each}}
