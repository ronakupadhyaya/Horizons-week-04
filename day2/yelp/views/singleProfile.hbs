<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Location:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<a href="/follow/{{user._id}}">Follow</a>
<a href="/unfollow/{{user._id}}">Unfollow</a>

<h4>Following:</h4>
{{#each allFollowing}}
  <div>{{this.toUser.displayName}}
  <!-- <form  action="/unfollow/{{this.toUser.id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form> -->
</div>
{{/each}}

<h4>Followers:</h4>
{{#each allFollowers}}
  <p>{{fromUser.displayName}}</p>
{{/each}}
