<h4>Name:</h4>
<p>{{user.displayName}}</p>

{{#if isFollowing}}
  <form class="" action="/users/{{user._id}}/unfollow/" method="post">
    <input type="submit" name="" value="Unfollow">
  </form>
{{else}}
  <form id="follow-button" class="" action="/users/{{user._id}}/follow/" method="post">
    <input type="submit" name="" value="Follow">
  </form>
{{/if}}

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div>{{uid2.displayName}}
  <form  action="/unfollow/{{uid2.id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{uid1.displayName}}</p>
{{/each}}
