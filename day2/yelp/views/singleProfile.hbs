<h4>Name:</h4>
<p>{{user.name}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.address}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following: {{Following.length}}</h4>
{{#each Following}}
  <div>name: {{this.to.name}} {{this.to.id}}
  <form  action="/unfollow/{{this.to.id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
</div>
<div> location: {{to.location}} </div>
{{/each}}

<h4>Followers: {{Followers.length}}</h4>
{{#each Followers}}
  <p>name: {{this.from.name}}</p>
  <p>location: {{from.location}}</p>
{{/each}}
