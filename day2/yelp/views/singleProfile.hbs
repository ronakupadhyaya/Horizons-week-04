<h1>Name:</h1>
<p>{{user.dispName}}</p>

<h2>Email:</h2>
<p>{{user.email}}</p>

<h2>Location:</h2>
<p>{{user.location}}</p>

<h2>Reviews:</h2>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div>{{this.to.displayName}}
  <form  action="/unfollow/{{this.to._id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{this.from.displayName}}</p>
{{/each}}
