<h4>Name:</h4>
<p>{{user.displayName}}
  <a href="/follow/{{user._id}}">follow</a>
  <a href="/unfollow/{{user._id}}">unfollow</a>
</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.address}}</p>

<h4>Reviews:</h4>
{{#each reviews}}
  <div>
    <p>{{this.restaurantId.name}}</p>
    <p>{{this.star}}</p>
    <p>{{this.content}}</p>
  </div>
{{/each}}

<h4>Following:</h4>
{{#each following}}
  <div>{{useridTo.displayName}}
  <form  action="/unfollow/{{useridTo._id}}">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{useridFrom.displayName}}</p>
{{/each}}
