<h1>{{restaurant.name}}</h1>
<h3>Hours today: {{restaurant.openTime}} - {{restaurant.closingTime}}</h3>
<img src="https://maps.googleapis.com/maps/api/staticmap?center={{restaurant.latitude}},{{restaurant.longtitude}}&markers=color:red|{{restaurant.latitude}},{{restaurant.longtitude}}&zoom=13&size=600x300&maptype=roadmap">
<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <div class="form-group">
    <button class="btn btn-success">Add Review</button>
  </div>
</form>

{{#each reviews}}
  <h3>{{userId.displayName}}</h3>
  <h3>{{content}}</h3>
{{/each}}
