<br><br>
  <form action="/restaurants/{{restaurant._id}}/review" method="get">
    <button type="submit" class="btn btn-warning">Add Review</button>
  </form>
</div>



<div class="col-xs-8 col-xs-offset-2" style="padding: 1em; margin-top: 2em">
  <h3 style="text-align: center">Reviews ({{allReviews.length}})</h3>
  {{#each allReviews}}
    <div style="border-top: 2px solid grey; padding: 1em">
      <br>
      <p><strong>{{this.userId.displayName}}</strong></p>
      <p style="color: grey">{{this.userId.location}}</p>
      <p>{{this.stars}} stars</p>
      <p>{{this.content}}</p>
    </div>
  {{/each}}
</div>
