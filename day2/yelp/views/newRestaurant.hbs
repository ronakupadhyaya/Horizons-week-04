<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <center>
    <h3>Add a Restaurant</h3>
    <div class="form-group">
      <input type="text" name="name" class="form-control" placeholder="Name" required>
    </div>
    <div class="form-group">
      <select name="category">
      <option value="american">American</option>
      <option value="korean">Korean</option>
      <option value="barbeque">Barbeque</option>
      <option value="casual">Casual</option>
    </select>
    </div>
    <div class="form-group">
      <input style='width: 43.5%;' type="number" name="price" min='1' max='3' placeholder="Relative Price" class="form-control" required>
    </div>
    <div class="form-group">
      <input type="text" name="address" placeholder="Address" class="form-control">
    </div>
    <div class="form-group">
      <input style='width: 43.5%;' type="number" name="openTime" min='0' max='23' placeholder="Open Time" required><br>
      <input style='width: 43.5%;' type="number" name="closeTime" min='0' max='23' placeholder="Close Time" required>
    </div>
    <div class="form-group">
      <button class="btn btn-danger">Add Restaurant</button>
    </div>
  </center>
</form>