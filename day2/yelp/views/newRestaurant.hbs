<h1> Add a Restaurant </h1>

<form action="/restaurants/new" method="POST">
  <div class="form-group">
    <label for="text">Name:</label>
    <input type="text" class="form-control" name="name">
  </div>
  <div class="form-group">
    <label for="category">Category:</label>
    <input type="text" class="form-control" name="category">
  </div>
  <div class="form-group">
    <label for="price">Relative Price (On a scale from 1-3):</label>
    <input type="text" class="form-control" name="price">
  </div>
  <div class="form-group">
    <label for="address">Address:</label>
    <input type="text" class="form-control" name="address">
  </div>
  <div class="form-group">
    <label for="open">Open Time:</label>
    <input type="text" class="form-control" name="open">
  </div>
  <div class="form-group">
    <label for="closing">Closing Time:</label>
    <input type="text" class="form-control" name="closing">
  </div>
  <button type="submit" class="btn btn-default">Add Restaurant</button>
</form>
