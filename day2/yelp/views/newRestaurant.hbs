
<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>New Restaurant</h3>
  <div class="form-group">
    <label>Name</label>
    <input type="text" name="restaurantName" class="form-control">
  </div>
  <div class="form-group">
    <label>Category</label>
    <select class="sortCategory">
      <option value="asian">asian</option>
      <option value="mexican">mexican</option>
      <option value="korean">korean</option>
      <option value="italian">italian</option>
      <option value="french">french</option>
      <option value="american">american</option>
    </select>
  </div>
  <div class="form-group">
    <label>Price</label>
    <input type="text" name="price" class="form-control">
  </div>
  <div class="form-group">
    <label>Address</label>
    <input type="text" name="address" class="form-control">
  </div>
  <div class="form-group">
    <label>Open Time</label>
    <input type="time" name="openTime">
  </div>
  <div class="form-group">
    <label>Close Time</label>
    <input type="time" name="closingTime">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Register</button>
  </div>
</form>
