<form method="post" action="/restaurants/new" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Register Restaurant</h3>
  <div class="form-group">
    <label>Restaurant Name</label>
    <input type="text" name="name" class="form-control" required>
  </div>
  <div class="dropdown form-group">
    <label>Select a cuisine category:</label></br>
    <select name="category" required>
      <option value="KBBQ">KBBQ</option>
      <option value="Chipotle">Chipotle</option>
      <option value="Ice cream">Ice cream</option>
      <option value="Ice cream">ICE CREAM</option>
      <option value="Trader Joe's">Trader Joe's</option>
      <option value="Cake">Cake</option>
      <option value="Barbeque">Barbeque</option>
      <option value="Bobes">Bobes</option>
      <option value="Food trucks">Food trucks</option>
    </select>
  </div>
  <div class="form-group">
    <label>Address</label>
    <input type="text" name="address" class="form-control" required>
  </div>
  <div class="dropdown form-group">
    <label>Select a category:</label></br>
    <select name="price" required>
      <option value="$">$</option>
      <option value="$$">$$</option>
      <option value="$$$">$$$</option>
    </select>
  </div>
  <div class="form-group">
    <label>Opens at</label>
    <input type="time" name="opening" class="form-control" required>
  </div>
  <div class="form-group">
    <label>Closes at</label>
    <input type="time" name="closing" class="form-control" required>
  </div>
  <div class="form-group">
    <input type="submit" value="Register"></input>
  </div>
</form>
