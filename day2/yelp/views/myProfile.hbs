<h4>Name:</h4>
<p>{{user.displayName}}</p><br>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.address}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div>{{to.displayName}}
  <form  action="/unfollow/{{to._id}}" method="post" class='{{to._id}}'>
    <input style="display: inline;" type="submit" value="Unfollow" class="unfollowBut">
  </form>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{from.displayName}}</p>
{{/each}}

