<h2 id="bet">Bet:{{game.playerBet}}</h2>
<form id="betForm" action="" method="POST" data-toggle="validator" role="form">
  <!-- <input type="number" name="bet" placeholder="bet amount" /> -->
  <input type="number" data-minlength="1" class="form-control" id="inputBet" placeholder="Amount" required>
  <div class="help-block with-errors"></div>


  <input type="submit" value="Submit Bet" />
</form>


<h2 id="game-status"></h2>
<div class="user-area">
  <div id="user-buttons" class="controls">
    <input type="button" id="hit" value="Hit">
    <input type="button" id="stand" value="Stand">
  </div>
  <div id="user-hand" class="hand">
    <h2>User Hand</h2>
  </div>
  <div class="score-parent">
    <p>Score</p>
    <div id="user-score" class="score">
    </div>
  </div>
</div>
<div class="dealer-area">
  <div id="dealer-hand" class="hand">
    <h2>Dealer Hand</h2>
  </div>
  <div class="score-parent">
    <p>Score</p>
    <div id="dealer-score"class="score">
    </div>
  </div>
</div>

<a href="/">Back to all games</a>

<script type="text/javascript" src='/javascripts/game.js'></script>
