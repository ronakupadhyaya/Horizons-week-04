<h1 style="padding:20px"> Register </h1>
<h4 style="color:red;padding-left:20px"> {{error}} </h2>
<form class="form" method="POST" style="padding:20px">
    <div class="form-group">
        <label class="sr-only">Username</label>
        <input type="text" class="form-control" name="username" placeholder="Username">
    </div>
    <div class="form-group">
        <label class="sr-only">Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password">
    </div>
    <div class="form-group">
    <label class="sr-only">Repeat Password</label>
        <input type="password" class="form-control" name="password_2" placeholder="Repeat Password">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>