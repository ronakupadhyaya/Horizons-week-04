
<form method="POST" action="/contacts/new" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Create Contact</h3>
  <div class="form-group">
    <!-- <label>Display Name</label> -->
    <input type="text" name="name" class="form-control" placeholder="Name" value="{{contact.name}}">
  </div>
  <div class="form-group">
    <!-- <label>Location</label> -->
    <input type="text" name="number" class="form-control" placeholder="Number" value="{{contact.number}}">
  </div>

  <div class="form-group">
    <button class="btn btn-success">Create Contact</button>
  </div>
  <div class="form-group">
    <a href='/logout'>Logout</a>
  </div>
</form>
