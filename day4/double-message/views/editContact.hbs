
<form method="POST" action="/contacts/{{contact._id}}" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Edit Contact</h3>
  <div class="form-group">
    <!-- <label>Display Name</label> -->
    <input type="text" name="name" class="form-control" value="{{contact.name}}">
  </div>
  <div class="form-group">
    <!-- <label>Location</label> -->
    <input type="text" name="number" class="form-control" value="{{contact.number}}">
  </div>

  <div class="form-group">
      <a href="/contacts"><button class="btn btn-success">Update Contact</button></a>
  </div>

  <div class="form-group">
    <a href='/logout'>Logout</a>
  </div>
</form>
